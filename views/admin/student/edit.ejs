<%- include('../layouts/header.ejs') %>
  <%- include('../layouts/sidebar.ejs') %>



    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">



      <!-- Main content -->
      <div class="content">
        <br>
        <br>

        <!-- /.card -->

        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Edit Student</h3>
            <button type="button" class="btn btn-info" style="float: right;" data-toggle="modal" data-target="#addstudent">
              Edit Student
            </button>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <form action="/admin/studentupdate/<%= d._id %>" method="post">
                <div class="form-group">
                  <label>Name</label>
                  <input type="text" value="<%=d.name %>" name="name" class="form-control">
                </div>
                <div class="form-group">
                  <label>Email</label>
                  <input type="text" value="<%=d.name %>" name="email" class="form-control">
                </div>
                <div class="form-group">
                  <label>Password</label>
                  <input readonly type="password"value="<%=d.password %>" name="password" class="form-control">
                </div>

                <button class="btn btn-success" type="submit">Submit</button>
              </form>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

        <!-- Modal add student -->
        <div class="modal fade" id="addstudent">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Add Student</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form action="/studentinsert" method="post">
                  <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="name" class="form-control">
                  </div>
                  <div class="form-group">
                    <label>Email</label>
                    <input type="text" name="email" class="form-control">
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control">
                  </div>
                 
                  <button class="btn btn-success" type="submit">Submit</button>
                </form>
              </div>
             
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
        </div>
        <!-- modal add student end -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->



    <%- include('../layouts/footer.ejs') %>